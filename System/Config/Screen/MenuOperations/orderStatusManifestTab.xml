<orderStatusManifestTab>
        <TAB title = "Manifest" >
          <FLEXTABLECOMPONENT name = "ManifestedContainerTable" 
                              refreshOnUpdate = "true"
                              greenbar = "true"
                              log = "true">
            <DBCONNECT type = "global" />
            <TRIGGER name = "OrderList" />

            <TABLE key = "OrderList" 
                   title = "ManifestedContainer">
              <SELECT sql = "select p.containerid, 
                                    s.shipdate, 
                                    s.carrierId, 
                                    p.serviceid,
                                    t.trackingnumber, 
                                    p.weight, 
                                    p.rate,
                                    p.status, 
                                    p.ts 
                             from ShipMgrShipment s
                             join ShipMgrShipmentPackage p
                             join ShipMgrPackageTrackingNumber t
                             where s.workorderid = //OrderList
                               and p.flags = 0"/>

              <ALTVALUES>
                <FIELD name = "Status" 
                       ifdef = "manifestedContainerStatusMap" />
              </ALTVALUES>
            </TABLE>
          </FLEXTABLECOMPONENT>
        </TAB>
</orderStatusManifestTab>
