 <FLEXSCREEN title          = "Flow Control"
            height          = "550"
            width           = "800"
            frametype       = "internal"
            globalThreading = "true"
            updateSecurity  = "flowControl.edit">

    <DBCONNECT type         = "predefined"
             connectionId   = "default"
             setglobal      = "true"/>
             
    <FLEXTABLECOMPONENT name = "flowControl" init = "flowControlTable"
                        greenbar = "true" refresh = "true"
                        refreshOnUpdate = "true">
      <DBCONNECT type = "global"/>

      <TABLE key = "flowControlTable">
        <SELECT sql = "select ControlId
                            , Description
                            , SorterId
                            , LaneNo
                            , Location
                            , CurrentSize
                            , MaxSize
                            , Status
                            , Flags
                            , Ts
                         from FlowControl
                        order by ControlId"/>
  
        <UPDATE sql = "call FlowControlScreenUpdate(//ControlId, //CurrentSize, //MaxSize)"/>
    
        <EDITOR restoreHide = "true" title = "Update Current Size"
                saveText = "Save" cancelText = "Cancel">
          <FIELD name = "ControlId">
            <TEXTFIELD editable = "false"/>
          </FIELD>
          <FIELD name = "MaxSize">
            <NUMERICFIELD editable = "false"/>
          </FIELD>
          <FIELD name = "CurrentSize" required = "true">
            <NUMERICFIELD />
          </FIELD>
        </EDITOR>
      </TABLE>
    </FLEXTABLECOMPONENT>
</FLEXSCREEN>