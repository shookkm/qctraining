<inventoryMaintTabOpexInputQueue>
    <TAB title= "Opex Input Queue">
      <FLEXTABLECOMPONENT name = "OpexInputQueueyTable" 
                          init = "OpexInputQueueyTable" 
                          records = "500"
                          greenbar = "true"
                          refresh = "true"
                          refreshOnUpdate = "true"
                          refreshOnInsert = "true"
                          ignoreEventConcatenation = "true">

        <DBCONNECT type = "global" />

        <TABLE key = "OpexInputQueueyTable"
               title = "Opex Input Queue">
          <SELECT sql = "select l.LocationId,
                                l.ZoneId, 
                                l.Description,
                                s.StorageId,
                                i.Unit, 
                                i.Qty,
                                dateformat(s.ts, gDateTimeformat) Ts
                         from locations l
                         join storage s
                         join Inventory i
                         where l.deviceType = 'OPEX_REPLEN_QUEUE' 
                         order by l.locationId,
                                  s.storageId" />

<!--  Do not want to allow updates and deletes at this point - PJH  
            <UPDATE sql = "call InvMaintLamiOpexQueueUpdate(//LocationId,
                                                            //StorageId,
                                                            //Unit,
                                                            /*Qty,
                                                            //Qty,
                                                           '$QC_USER')" />             

            <DELETE sql = "call InvMaintLamiOpexQueueDelete(/*LocationId,
                                                            /*StorageId,
                                                            /*Unit,
                                                            /*Qty,
                                                           '$QC_USER')" />             
-->
          <ALTVALUES>
          </ALTVALUES>
              
          <TABLECOLUMNS>
           <TABLECOLUMN name = "LocationId"  
                        preferredWidth = "80"
                        maxWidth = "100"/>
                        
           <TABLECOLUMN name = "ZoneId"  
                        preferredWidth = "60"
                        maxWidth = "70"/>
                        
           <TABLECOLUMN name = "StorageId"  
                        preferredWidth = "80"
                        maxWidth = "100"/>
                        
           <TABLECOLUMN name = "Unit"  
                        preferredWidth = "80"
                        maxWidth = "100"/>
                        
           <TABLECOLUMN name = "Qty"  
                        preferredWidth = "50"
                        maxWidth = "60"
                        align = "right"/>
                        
           <TABLECOLUMN name = "Ts"  
                        preferredWidth = "110"
                        maxWidth = "120"/>
          </TABLECOLUMNS>

        </TABLE>
      </FLEXTABLECOMPONENT>
    </TAB>
</inventoryMaintTabOpexInputQueue>
