      <Screen commandId = "physicalInventory"
              count = "1"
              screenClass = "Gui.Inventory.FrmFlexPhysicalInventory">
        <Params>
          <param name = "connectionId" value = "default" />
          <param name = "DEFAULT_UNIT_TYPE" value = "each" />
          <param name = "unitTypeLabel" value = "UnitType" />
          <param name = "allowEmptyLocations" value = "true" />
          <param name = "autoCreateWorkOrder" value = "true" />
          <param name = "countEmptyLocationsDefault" value = "Y" />
          <param name = "procCreatePhysicalInventory" value = "PhysicalInventoryCreate" />
          <param name = "procPostPhysicalInventoryCreate" value = "PhysicalCompleteRecentCounts" />
          <param name = "procCancelPhysicalInventory" value = "LamiPhysicalInventoryCancelJobEx" />
          <param name = "procCompletePhysicalInventory" value = "PhysInvLocationsCompleteEx" />
          <param name = "procDeletePhysicalInventory" value = "PhysicalInventoryDeleteJobEx" />
          
        </Params>

       <CustomMenu name = "Operations">
          <MenuItem name = "Set Mode..." debug = "false" noCommit = "false"
                    procSetMode = "LamiSetOperationMode"
                    handler = "Gui.Inventory.PhysicalInventoryModeHandler" />
          <Separator/>
          <MenuItem name = "Cancel Cycle Counts" debug = "false" noCommit = "false"
                    handler = "Gui.Inventory.PhysicalInventoryCancelCycleCountsHandler"
                    procCancelCounts = "LamiPhysicalInventoryCancelCycleCountsEx" />
        </CustomMenu>

        <UnitTypes>
          <UnitType value = "each" />
          <UnitType value = "KIT_BOX" />
        </UnitTypes>

        <ProgressHandler class = "Gui.Inventory.BasicPhysicalInventoryProgressHandler"
                        includeOnHoldColumn = "true" />

        <ActiveTabs>
          <Tab title = "Pick Locations"
               class = "Gui.Inventory.PnlPhysicalInventoryActive" />
          <Tab title = "Reserve Locations (Cases)"
               class = "Gui.Inventory.PnlPhysicalInventoryActiveReserveCases" >
            <EXCLUDE_ZONES>     
              <ZONE name = "OPEX.1" />
            </EXCLUDE_ZONES>     
          </Tab>     
           <Tab title = "Reserve Storage"
               class = "Gui.Inventory.PnlPhysicalInventoryActiveReserve" >
            <EXCLUDE_ZONES>     
              <ZONE name = "OPEX.1" />
            </EXCLUDE_ZONES>     
          </Tab>                     
          <Tab title = "OPEX"
               class = "Gui.Inventory.PnlPhysicalInventoryActiveStorage" >
            <INCLUDE_ZONES>     
              <ZONE name = "OPEX.1" />
            </INCLUDE_ZONES>     
          </Tab>                   
          <Tab title = "Problems"
               class = "Gui.Inventory.PnlInventoryProblems" >
           </Tab>                             
        </ActiveTabs>

        <ExpiredTabs>
          <Tab title = "Summary (Expired)" class = "Gui.Inventory.PnlPhysicalInventoryExpired" />
        </ExpiredTabs>

        <CompleteTabs>
          <Tab title = "Summary (Updated)" class = "Gui.Inventory.PnlPhysicalInventoryCompleted" />
        </CompleteTabs>

        <InventoryActionHandler class = "Gui.Inventory.BasicPhysicalInventoryActionHandler"
                                modeCheckEnabled = "true"
                                cycleCountCheckEnabled = "true" />

      </Screen>
</inventoryMenuFiles>

