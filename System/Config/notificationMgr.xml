<NotificationMgr>

  <!--
       Define the database connections to be used.
    -->
  <DbConnect id = "wcs" 
             machine = "$DATABASE_MACHINE"
             database = "$DATABASE_NAME"
             port = "$DATABASE_PORT"
             user = "notificationMgr"
             password = "notificationMgr"
             adapter = "Library.Database.IAnywhereDatabaseAdapter" />

  <!--
       Need the default database pool to be used by the message handlers.
    -->
  <DbPool dbId = "wcs" minSize = "1"/>

  <!--
       Need a connection to the database to initialize the system log format
       messages.
    -->
  <QcInit dbId = "wcs"/>

  <TcpipNetwork createServer = "true"/>

  <OutgoingServer domain = "qcsoftware.com" server = "mail.qcsoftware.com"
                  from = "notificationMgr" />

  <TaskThread name = "systemLogXmit" interval = "60000" dbId = "wcs">
    <QcTask task = "Products.QcApp.Tasks.SystemLogXmitEventPoller"/>
  </TaskThread>
</NotificationMgr>
