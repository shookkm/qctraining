<Security_Template rootName="Security">
  <!-- define icons -->
  <Icons>
    <Icon icon="computer.gif" name="root" type="standard"/> 
    <Icon icon="lock.gif" name="locked" type="standard"/> 
    <Icon icon="key.gif" name="unlocked" type="standard"/> 
    <Icon icon="user.png" name="user" type="standard"/> 
    <Icon icon="screens.png" name="screensIcon" type="standard"/>
  </Icons>

  <!-- Screen security begins -->
  <Security commandId="screenSecurity" iconName="screensIcon" text="Screen Security">

    <!-- system menu -->
    <Security_Item commandId="sysMenu" text="System">
      <Security_Item commandId="sysParams" text="System Parameters">
        <Security_Item commandId="sysParams.editParams" text="Edit"/>
      </Security_Item>
      <Security_Item commandId="securityAdmin" text="Security"/>
      <Security_Item commandId="operators" text="Operators/Notifications">
        <Security_Item commandId="operators.edit" text="Edit"/>
      </Security_Item>
      <Security_Item commandId="processes" text="System Processes">
        <Security_Item commandId="processes.control" text="Start/Stop Control"/>
      </Security_Item>      
      <Security_Item commandId="FTP" text="FTP Files">
        <Security_Item commandId="open" text="Open"/>
        <Security_Item commandId="delete" text="Delete"/>
      </Security_Item>
      <Security_Item commandId="sorterConfig" text="Sorter Configuration">
        <Security_Item commandId="sorterConfig.insert" text="Add"/>
        <Security_Item commandId="sorterConfig.edit" text="Modify"/>
        <Security_Item commandId="sorterConfig.delete" text="Delete"/>
      </Security_Item>
      <Security_Item commandId="routeMaint" text="Route Maintenance">
        <Security_Item commandId="routeMaint.editRoutes" text="Edit Routes"/>
        <Security_Item commandId="routeMaint.editGroups" text="Edit Group Routes"/>
        <Security_Item commandId="routeMaint.editSorters" text="Edit Sorters"/>
      </Security_Item>
      <Security_Item commandId="sortDestinations" text="Sort Destinations">
        <Security_Item commandId="sortDestinations.delete" text="Delete"/>
        <Security_Item commandId="sortDestinations.setRate" text="Set Lane Rate"/>
        <Security_Item commandId="sortDestinations.assign" text="Assign"/>
        <Security_Item commandId="sortDestinations.rename" text="Rename"/>
        <Security_Item commandId="sortDestinations.enable" text="Enable Lanes"/>
        <Security_Item commandId="sortDestinations.setLoad" text="Set Lane Load"/>
      </Security_Item>
      <Security_Item commandId="scales" text="Scale Maintenance">
        <Security_Item commandId="scaleMaint.edit" text="Edit"/>
      </Security_Item>
    </Security_Item>

    <!-- operations menu -->
    <Security_Item commandId="operations" text="Operations">
      <Security_Item commandId="containerRouting" text="Carton Routing">
        <Security_Item commandId="containerRouting.add" text="Add"/>
        <Security_Item commandId="containerRouting.modify" text="Modify"/>
        <Security_Item commandId="containerRouting.delete" text="Delete"/>
      </Security_Item>
      <Security_Item commandId="routeStatus" text="Route Status">
        <Security_Item commandId="routeStatus.edit" text="Edit"/>
      </Security_Item>      
    </Security_Item>

    <!-- display menu -->
    <Security_Item commandId="display" text="Display">
      <Security_Item commandId="sortRate" text="Sort Rate">
        <Security_Item commandId="sortRate.edit" text="Edit"/>
      </Security_Item>
      <Security_Item commandId="divertStats" text="Divert Statistics"/>
      <Security_Item commandId="scannerStatistics" text="Scanner Statistics"/>
      <Security_Item commandId="scannerLog" text="Scanner Log"/>
      <Security_Item commandId="scaleLog" text="Scale Log"/>
      <Security_Item commandId="logger" text="Logger"/>
      <Security_Item commandId="minilog" text="MiniLog"/>      
    </Security_Item>

    <!-- tools menu -->
    <Security_Item commandId="tools" text="Tools">
      <Security_Item commandId="hostLog" text="Host Log"/>
      <Security_Item commandId="dbtool" text="Database Tool">
        <Security_Item commandId="dbtool.interact" text="Interactive SQL"/>
      </Security_Item>
      <Security_Item commandId="testScan" text="Test Scanner Mgr"/>
      <Security_Item commandId="databaseLockReport" text="Database Locks"/>
      <Security_Item commandId="message" text="Messenger"/>
      <Security_Item commandId="mnemonicsView" text="Mnemonics View"/>
    </Security_Item>
  </Security>

  <Help>
    <HelpOn commandId="screenSecurity" text="Controls access to all screens."/>
    <HelpOn commandId="sysMenu" text="Controls access to the System Menu."/>
    <HelpOn commandId="operations" text="Controls access to the Operations Menu."/>
    <HelpOn commandId="display" text="Controls access to the Display Menu."/>
    <HelpOn commandId="tools" text="Controls access to the Tools Menu."/>
    <HelpOn commandId="sysParams" text="Controls access to the System Parameters screen."/>
    <HelpOn commandId="sysParams.editParams" text="Controls whether user has permission to change values of system parameters."/>
    <HelpOn commandId="securityAdmin" text="Controls Access to the Security Administration screen."/>
    <HelpOn commandId="operators" text="Controls Access to the Operators/Notifications screen."/>
    <HelpOn commandId="operators.edit" text="Controls access to the ability to add, modify and delete notifications."/>
    <HelpOn commandId="processes" text="Controls access to the System Processes screen."/>
    <HelpOn commandId="processes.control" text="Controls access to whether user can start and stop processes."/>
    <HelpOn commandId="FTP" text="Controls access to FTP file listing screen."/>
    <HelpOn commandId="FTP.open" text="Controls user access to be able to open and view file."/>
    <HelpOn commandId="FTP.delete" text="Allows users to delete FTP files."/>
    <HelpOn commandId="sorterConfig" text="Controls access to the Sorter Configuration screen."/>
    <HelpOn commandId="sorterConfig.insert" text="Controls access to the ability to add to the sorter configuration."/>
    <HelpOn commandId="sorterConfig.edit" text="Controls access to the ability to edit the sorter configuration."/>
    <HelpOn commandId="sorterConfig.delete" text="Controls access to the ability to delete from the sorter configuration."/>
    <HelpOn commandId="routeMaint" text="Controls access to the Route Maintenance screen."/>
    <HelpOn commandId="routeMaint.editRoutes" text="Controls access to the ability to add, modify and delete routes."/>
    <HelpOn commandId="routeMaint.editGroups" text="Controls access to the ability to add, modify and delete group routes."/>
    <HelpOn commandId="routeMaint.editSorters" text="Controls access to the ability to add, modify and delete sorters."/>
    <HelpOn commandId="sortDestinations" text="Controls access to the Sort Destinations screen."/>
    <HelpOn commandId="sortDestinations.delete" text="Controls access to whether user can delete routes from sorters."/>
    <HelpOn commandId="sortDestinations.setRate" text="Controls access to whether the user can set the lane rate."/>
    <HelpOn commandId="sortDestinations.assign" text="Controls access to whether user can assign routes to lanes."/>
    <HelpOn commandId="sortDestinations.rename" text="Controls access to whether user can rename lanes."/>
    <HelpOn commandId="sortDestinations.enable" text="Controls access to whether user can enable/disable lanes."/>
    <HelpOn commandId="sortDestinations.setLoad" text="Controls access to whether user can set lane loads."/>
    <HelpOn commandId="scales" text="Controls Access to the Scale Maintenance screen."/>
    <HelpOn commandId="scales.edit" text="Controls access to the ability to add, modify and delete scales."/>
    <HelpOn commandId="containerRouting" text="Controls access to the Container Routing screen."/>
    <HelpOn commandId="containerRouting.add" text="Controls access to whether user can add containers."/>
    <HelpOn commandId="containerRouting.modify" text="Controls access to whether user can modify routes assigned to containers."/>
    <HelpOn commandId="containerRouting.delete" text="Controls access to whether user can delete containers."/>
    <HelpOn commandId="routeStatus" text="Controls access to the Route Status screen."/>
    <HelpOn commandId="routeStatus" text="Controls access to whether user can mark container routes complete."/>
    <HelpOn commandId="sortRate" text="Controls access to the Sort Rate screen."/>
    <HelpOn commandId="sortRate.edit" text=""/>
    <HelpOn commandId="divertStats" text="Controls access to the Divert Statistics screen."/>
    <HelpOn commandId="scannerStatistics" text="Controls access to the Scanner Statistics screen."/>
    <HelpOn commandId="scannerLog" text="Controls access to the Scanner Log screen."/>
    <HelpOn commandId="logger" text="Controls access to the Logger screen."/>
    <HelpOn commandId="minilog" text="Controls access to the miniLog screen."/>
    <HelpOn commandId="hostLog" text="Controls access to the Host Log screen."/>
    <HelpOn commandId="dbtool" text="Controls access to the Database Tool screen."/>
    <HelpOn commandId="dbtool.interact" text="Controls access to the Interactive SQL tab."/>
    <HelpOn commandId="testScan" text="Controls access to the scanner testing tool."/>
    <HelpOn commandId="databaseLockReport" text="Controls access to the Database Locks screen."/>
    <HelpOn commandId="message" text="Controls user access to the messenger screen. Disabling this item means the user can neither send nor receive messages and is invisible to the user list."/>
    <HelpOn commandId="mnemonicsView" text=""/>
  </Help>
</Security_Template>
